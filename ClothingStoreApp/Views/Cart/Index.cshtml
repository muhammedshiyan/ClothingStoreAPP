@model ClothingStoreApp.Models.CartPageViewModel

@{
    ViewData["Title"] = "Your Cart";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container my-5">

    <h2 class="fw-bold mb-4">🛒 Your Cart</h2>

    @if (Model.IsEmpty)
    {
        <div class="alert alert-info text-center p-4">
            <i class="bi bi-cart-x fs-2"></i>
            <h5 class="mt-2">Your cart is empty</h5>
        </div>
    }
    else
    {
        <table class="table table-bordered align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Item</th>
                    <th width="120">Price</th>
                    <th width="150">Quantity</th>
                    <th width="120">Total</th>
                    <th width="120">Action</th>
                </tr>
            </thead>

            <tbody>

                @* ---- SESSION ITEMS ---- *@
                @if (Model.SessionCart != null)
                {
                    foreach (var item in Model.SessionCart)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@item.ImageUrl" style="width:65px;height:65px;object-fit:cover;border-radius:5px;" />
                                    <span class="ms-3 fw-semibold">@item.Name</span>
                                </div>
                            </td>

                            <td>₹@item.Price</td>

                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <a class="btn btn-sm btn-outline-dark" asp-action="Decrease" asp-route-id="@item.ProductId">−</a>
                                    <span class="fw-bold">@item.Quantity</span>
                                    <a class="btn btn-sm btn-outline-dark" asp-action="Increase" asp-route-id="@item.ProductId">+</a>
                                </div>
                            </td>

                            <td>₹@(item.Price* item.Quantity)</td>

                            <td>
                                <a class="btn btn-danger btn-sm w-100"
                                   asp-action="Remove" asp-route-id="@item.ProductId">
                                    Remove
                                </a>
                            </td>
                        </tr>
                    }
                }

                @* ---- DB ITEMS ---- *@
                @if (Model.DbCart != null)
                {
                    foreach (var item in Model.DbCart)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@item.Product.ImageUrl" style="width:65px;height:65px;object-fit:cover;border-radius:5px;" />
                                    <span class="ms-3 fw-semibold">@item.Product.Name</span>
                                </div>
                            </td>

                            <td>₹@item.Product.Price</td>

                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <a class="btn btn-sm btn-outline-dark" asp-action="Decrease" asp-route-id="@item.ProductId">−</a>
                                    <span class="fw-bold">@item.Quantity</span>
                                    <a class="btn btn-sm btn-outline-dark" asp-action="Increase" asp-route-id="@item.ProductId">+</a>
                                </div>
                            </td>

                            <td>₹@(item.Product.Price* item.Quantity)</td>

                            <td>
                                <a class="btn btn-danger btn-sm w-100"
                                   asp-action="Remove" asp-route-id="@item.ProductId">
                                    Remove
                                </a>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-3">

            <a class="btn btn-outline-danger" asp-action="Clear">
                <i class="bi bi-trash"></i> Clear Cart
            </a>

            <div>
                <h4 class="fw-bold">Total: ₹@Model.Total</h4>

                <a class="btn btn-success btn-lg mt-2"
                   asp-controller="Cart" asp-action="Checkout">
                    Proceed to Checkout →
                </a>
            </div>

        </div>
    }
</div>
