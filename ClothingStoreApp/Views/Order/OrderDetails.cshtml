@using ClothingStore.Core.Entities
@model ClothingStore.Core.Entities.Order

@{
    ViewData["Title"] = $"Order #{Model.Id}";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    .order-card {
        border-radius: 12px;
        background: #fff;
        padding: 24px;
        border: 1px solid #e5e5e5;
    }

    .timeline-step {
        position: relative;
        padding-left: 30px;
        margin-bottom: 15px;
    }

        .timeline-step:before {
            content: "";
            position: absolute;
            width: 12px;
            height: 12px;
            background: #ccc;
            border-radius: 50%;
            left: 0;
            top: 3px;
        }

        .timeline-step.active:before {
            background: #000;
        }

    .timeline-line {
        border-left: 2px dashed #ddd;
        margin-left: 5px;
        margin-bottom: 10px;
    }

    .product-row img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 6px;
        margin-right: 12px;
    }

    .badge-status {
        padding: 8px 16px;
        font-size: 14px;
        border-radius: 6px;
        text-transform: uppercase;
    }
</style>

<div class="container my-5">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">Order #@Model.Id</h3>
        <a asp-action="Invoice" asp-route-id="@Model.Id" class="btn btn-dark">
            <i class="bi bi-file-earmark-arrow-down"></i> Download Invoice
        </a>
    </div>

    <!-- Order Status -->
    <div class="order-card mb-4">
        <div class="d-flex align-items-center justify-content-between">
            <h5 class="fw-bold"><i class="bi bi-clock-history me-2"></i> Order Status</h5>
            <span class="badge-status bg-dark text-white">@Model.OrderStatus</span>
        </div>

        <div class="timeline-line mt-3 ps-3">

            <div class="timeline-step @(Model.OrderDate != null ? "active" : "")">
                Order Placed <small class="text-muted d-block">@Model.OrderDate</small>
            </div>

            <div class="timeline-step @(Model.ApprovedAt != null ? "active" : "")">
                Approved <small class="text-muted d-block">@Model.ApprovedAt</small>
            </div>

            <div class="timeline-step @(Model.ShippedAt != null ? "active" : "")">
                Shipped <small class="text-muted d-block">@Model.ShippedAt</small>
            </div>

            @if (Model.OrderStatus == OrderStatus.Cancelled)
            {
                <div class="timeline-step active text-danger">
                    Cancelled <small class="text-muted d-block">@Model.CancelledAt</small>
                </div>
            }
            else
            {
                <div class="timeline-step @(Model.DeliveredAt != null ? "active" : "")">
                    Delivered <small class="text-muted d-block">@Model.DeliveredAt</small>
                </div>
            }
        </div>
    </div>

    <!-- Customer & Shipping Info -->
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="order-card">
                <h5 class="fw-bold mb-3"><i class="bi bi-person-circle"></i> Customer Info</h5>
                <p class="mb-1"><strong>Name:</strong> @Model.CustomerName</p>
                <p class="mb-1"><strong>Email:</strong> @Model.Email</p>
            </div>
        </div>

        <div class="col-md-6">
            <div class="order-card">
                <h5 class="fw-bold mb-3"><i class="bi bi-geo-alt"></i> Shipping Address</h5>
                <p>@Model.Address</p>
            </div>
        </div>
    </div>

    <!-- Product Items -->
    <div class="order-card">
        <h5 class="fw-bold mb-3"><i class="bi bi-bag"></i> Order Items</h5>

        @foreach (var item in Model.Items)
        {
            <div class="d-flex justify-content-between align-items-center border-bottom py-2 product-row">
                <div class="d-flex align-items-center">
                    <img src="@item.ImageUrl" />
                    <span>@item.ProductName</span>
                </div>

                <span>₹@item.Price × @item.Quantity</span>
                <span class="fw-bold">₹@(item.Price* item.Quantity)</span>
            </div>
        }

        <div class="text-end mt-3">
            <h5 class="fw-bold">Total: ₹@Model.TotalAmount</h5>
        </div>
    </div>
</div>
