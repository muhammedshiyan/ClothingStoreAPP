@using ClothingStore.Core.Entities
@model IEnumerable<Order>

@{
    ViewData["Title"] = "Orders";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">All Orders</h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Store
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> No orders found.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm">
            <table class="table align-middle table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Order #</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Items</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="fw-bold">@order.Id</td>
                            <td>@order.OrderDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                            <td>
                                @if (order.OrderStatus == OrderStatus.Cancelled)
                                {
                                    <span class="badge bg-danger">Cancelled</span>
                                }
                                else if (order.OrderStatus == OrderStatus.Delivered)
                                {
                                    <span class="badge bg-success">Delivered</span>
                                }
                                else if (order.OrderStatus == OrderStatus.Shipped)
                                {
                                    <span class="badge bg-primary">Shipped</span>
                                }
                                else if (order.OrderStatus == OrderStatus.Approved)
                                {
                                    <span class="badge bg-warning text-dark">Approved</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pending</span>
                                }
                            </td>
                            <td>@order.Items.Count()</td>
                            <td>
                                @{
                                    var total = order.Items.Sum(i => i.Quantity * i.Price);
                                }
                                @total.ToString("C")
                            </td>
                            <td class="text-end">
                                <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-outline-dark">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a asp-action="Invoice" asp-route-id="@order.Id" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-file-earmark-arrow-down"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
