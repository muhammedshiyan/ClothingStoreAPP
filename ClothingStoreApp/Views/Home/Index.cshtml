    <div id="popular-products" class="container my-5">
        <h3 class="fw-bold mb-3">Popular Products</h3>

        <div id="product-container">
            @await Html.PartialAsync("~/Views/Product/_ProductsPartial.cshtml", Model)
        </div>
    </div>





    <script>
        function openPage(category) {
            window.location.href = "Product/Products?category=" + category;
        }
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const container = document.getElementById("product-container");

            document.addEventListener("click", async (e) => {
                if (e.target.classList.contains("product-page")) {
                    e.preventDefault();
                    const page = e.target.dataset.page;

                    const response = await fetch(`/Product/ProductsPartial?page=${page}`);
                    const html = await response.text();

                    container.innerHTML = html;

                    // Scroll smoothly to the product section
                    const section = document.getElementById("popular-products");
                    if (section) section.scrollIntoView({ behavior: "smooth" });
                }
            });
        });
    </script>
    <style>
        html {
            scroll-behavior: smooth;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 1.2rem;
        }

        .product-card {
            height: 360px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .product-card img {
                height: 200px;
                object-fit: cover;
                border-radius: 6px;
            }
    </style>

