@model IEnumerable<ClothingStore.Core.Entities.Product>

<h2>Product List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Category</td>
                <td>@p.Price.ToString("C")</td>
                <td>@p.StockQuantity</td>
            </tr>
        }
    </tbody>
</table>
