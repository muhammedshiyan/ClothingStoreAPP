@model ClothingStoreApp.Models.ProductViewModel
@{
    ViewData["Title"] = "Add Product";
}

<div class="card shadow p-4">
    <div class="d-flex justify-content-between mb-3">
        <h3 class="fw-bold">Add Product</h3>
        <a class="btn btn-secondary" asp-action="Index">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <!-- Show success temp message -->
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success">@TempData["success"]</div>
    }

    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label fw-semibold">Product Name</label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label fw-semibold">Category</label>
                <select asp-for="Category" class="form-select" required>
                    <option value="">-- Select Category --</option>
                    <option>Men</option>
                    <option>Women</option>
                    <option>Kids</option>
                    <option>Accessories</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label class="form-label fw-semibold">Price (₹)</label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label class="form-label fw-semibold">Stock Quantity</label>
                <input asp-for="StockQuantity" type="number" class="form-control" required />
                <span asp-validation-for="StockQuantity" class="text-danger"></span>
            </div>

@*             <div class="col-md-4 mb-3">
                <label class="form-label fw-semibold">Image URL</label>
                <input asp-for="ImageUrl" class="form-control" id="imgUrl" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div> *@



                <div class="col-md-4 mb-3">
                    <label class="form-label fw-semibold">Product Image</label>
                    <input asp-for="ProductImage" type="file" class="form-control" accept="image/*" />
                    <span asp-validation-for="ProductImage" class="text-danger"></span>
                </div>

\



            <div class="col-12 mb-3">
                <label class="form-label fw-semibold">Description</label>
                <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Image preview -->
            <script>
                function previewImage(event) {
                    var img = document.getElementById("preview");
                    img.src = URL.createObjectURL(event.target.files[0]);
                    img.style.display = "block";
                }
            </script>

        </div>

        <button class="btn btn-dark px-4 fw-bold">
            <i class="bi bi-check-circle"></i> Save Product
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById("imgUrl").addEventListener("input", function () {
            const url = this.value;
            const img = document.getElementById("preview");
            if (url.trim() !== "") {
                img.src = url;
                img.style.display = "block";
            } else {
                img.style.display = "none";
            }
        });
    </script>
}
